\def\insertsectionnavigation#1{%
\vspace{-1.7cm} 
  %\hbox to #1{\vbox{{\usebeamerfont{section in head/foot}%
     %\usebeamercolor[]{section in head/foot}%
     \def\slideentry##1##2##3##4##5##6{}%
     \def\sectionentry##1##2##3##4##5{%
       \ifnum##5=\c@part%
       \def\insertsectionhead{##2\hskip1em}%
       \def\insertsectionheadnumber{##3}%
       \def\insertpartheadnumber{##5}%
         \hyperlink{Navigation##3}{%
             \ifnum\c@section=##1%
               {\usebeamertemplate{section in head/foot}}%
             \else%
               {\usebeamertemplate{section in head/foot shaded}}%
             \fi%
         }\par
       \fi}%
       \parbox[t][0cm][t]{0.67\linewidth-2em}{%
       \setlength\columnsep{2pt}
       \begin{multicols}{2}
       %\strut\makebox[2pt][l]{}\hspace{-15ex}%
       \dohead
       \end{multicols}}}
     %}%
%  \hfil}%
 
